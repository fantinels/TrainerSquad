@model TrainerSquad.Models.ViewModels.EquipmentFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Equipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Equipment.EquipmentName" class="control-label"></label>
                <input asp-for="Equipment.EquipmentName" class="form-control" />
                <span asp-validation-for="Equipment.EquipmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Status" class="control-label"></label>
                <select asp-for="Equipment.Status" class="form-control" asp-items="Html.GetEnumSelectList<EquipmentStatus>()"></select>
                <span asp-validation-for="Equipment.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.LastMaintenance" class="control-label"></label>
                <input asp-for="Equipment.LastMaintenance" class="form-control" />
                <span asp-validation-for="Equipment.LastMaintenance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.PersonalId" class="control-label"></label>
                <!-- <select asp-for="Equipment.PersonalId" class="form-control" asp-items="ViewBag.PersonalId"></select> -->
                <select asp-for="Equipment.PersonalId" class="form-control" asp-items="@(new SelectList(Model.Personals, "Id", "Name"))"> </select>
                <span asp-validation-for="Equipment.PersonalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
